@model LMS.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
}

<h2>Radera Användare</h2>

<h3>Är du säker på att du vill radera användare?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Group.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        if (ViewBag.Error == null)
        {
            <div class="form-actions no-color">
                <input type="submit" value="Bekräfta" class="btn btn-default" />
            </div>
        }
    }

</div>

<div>
    <p>
        @if (Request.UrlReferrer.LocalPath == "/Account/UserList")
        {
            @Html.ActionLink("Tillbaka", "UserList", "Account")
        }
        else if (Request.UrlReferrer.LocalPath == "/Account/UserDetails/" + Model.Id)
        {
            @Html.ActionLink("Tillbaka", "UserDetails", "Account", new { id = Model.Id }, null)
        }
        else if (Request.UrlReferrer.LocalPath == "/Groups/Details/" + Model.GroupId)
        {
            @Html.ActionLink("Tillbaka", "Details", "Groups", new { id = Model.GroupId }, null)
        }
    </p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

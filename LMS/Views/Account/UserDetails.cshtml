@model LMS.Models.ApplicationUser

@{
    ViewBag.Title = "Användardetaljer";
}

<h2>@ViewBag.Title</h2>

<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Group)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Group.Name)
        </dd>

    </dl>
</div>
<p>
    @if (Request.UrlReferrer.LocalPath == "/Account/UserList")
    {
        @Html.ActionLink("Tillbaka", "UserList", "Account")
    }
    else if (Request.UrlReferrer.LocalPath == "/Account/UserDetails/" + Model.Id)
    {
        @Html.ActionLink("Tillbaka", "UserDetails", "Account", new { id = Model.Id }, null)
    }
    else if (Request.UrlReferrer.LocalPath == "/Groups/Details/" + Model.GroupId)
    {
        @Html.ActionLink("Tillbaka", "Details", "Groups", new { id = Model.GroupId }, null)
    }
</p>

